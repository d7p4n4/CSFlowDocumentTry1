<Window x:Class="CSFlowDocumentTry1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSFlowDocumentTry1"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="500">
    <Grid>
        <FlowDocumentReader Height="325" VerticalAlignment="Top">
            <FlowDocument ColumnWidth="400">
                <Section Background="GhostWhite">
                    <Paragraph TextAlignment="Center">
                        Űrlap a FlowDocument-en belül.
                    </Paragraph>
                    <BlockUIContainer>
                        <WrapPanel Orientation="Vertical" Width="450">
                            <WrapPanel Orientation="Vertical" HorizontalAlignment="Center" Width="450">
                                <Label Content="Név: "/>
                                <TextBox x:Name="uiTextBoxNev" Width="400"/>
                                <Label Content="Életkor: "/>
                                <TextBox x:Name="uiTextBoxKor" Width="400"/>
                                <Button Click="ButtonAction" Width="400" HorizontalAlignment="Center" Height="25" Margin="25 12">Értékek kiírása</Button>
                            </WrapPanel>
                        </WrapPanel>
                    </BlockUIContainer>
                    <Paragraph>
                        A gombon történő kattintás után, a beírt értékek kiíródnak a flowDocumenten kívül elhelyezett listView-ba.
                    </Paragraph>
                </Section>
            </FlowDocument>
        </FlowDocumentReader>
        <ListView x:Name="uiListView" BorderBrush="Black" BorderThickness="2" MinWidth="400" HorizontalAlignment="Center" Height="150" Margin="0 350 0 12">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <WrapPanel>
                        <TextBlock Text="Name: " />
                        <TextBlock Text="{Binding name}" FontWeight="Bold" />
                        <TextBlock Text=", " />
                        <TextBlock Text="Age: " />
                        <TextBlock Text="{Binding age}" FontWeight="Bold" />
                    </WrapPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
